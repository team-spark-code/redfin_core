# Environment Variables Template for Redfin UI
# Copy this file to .env.local and fill in your actual values

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_APP_NAME=Redfin UI

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# JWT Secret Key
JWT_SECRET=your-super-secret-jwt-key-here

# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Kakao OAuth
NEXT_PUBLIC_KAKAO_CLIENT_ID=your-kakao-rest-api-key
NEXT_PUBLIC_KAKAO_REDIRECT_URI=http://localhost:3000/signup

# Toss Payments (테스트용 클라이언트 키)
NEXT_PUBLIC_TOSS_CLIENT_KEY=test_ck_D5GePWvyJnrK0W0k6q8gLzN97Eoq

# 데이터베이스 (MariaDB/MySQL)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_NAME=your-db-name

# MongoDB (선택사항)
MONGODB_URI=mongodb://localhost:27017/your-db-name

# 개발/프로덕션 환경
NODE_ENV=development